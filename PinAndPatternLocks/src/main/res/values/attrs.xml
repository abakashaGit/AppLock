<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PinLock">

        <attr name="pinLength" format="integer"/>
        <attr name="backgroundColor" format="color"/>

        <attr name="keypadButtonShape" format="reference"/>
        <attr name="keypadTextColor" format="color"/>
        <attr name="keypadTextSize" format="integer"/>
        <attr name="keypadWidth" format="dimension"/>
        <attr name="keypadHeight" format="dimension"/>
        <attr name="keypadVerticalSpacing" format="dimension"/>
        <attr name="keypadHorizontalSpacing" format="dimension"/>
        <attr name="keypadClickAnimationDuration" format="integer"/>

        <attr name="cancelForgotTextColor" format="color"/>
        <attr name="cancelForgotTextSize" format="integer"/>

        <attr name="infoTextColor" format="color"/>
        <attr name="infoTextSize" format="integer"/>

        <attr name="vibrateOnClick" format="boolean"/>
        <attr name="vibrateDuration" format="integer"/>

        <attr name="statusEmptyBackground" format="reference"/>
        <attr name="statusFilledBackground" format="reference"/>
        <attr name="statusDotDiameter" format="dimension"/>
        <attr name="statusDotSpacing" format="dimension"/>

    </declare-styleable>

    <!--
         Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels.
    -->

    <declare-styleable name="LockPatternView">
        <attr name="aspect" format="string" />
    </declare-styleable>

</resources>