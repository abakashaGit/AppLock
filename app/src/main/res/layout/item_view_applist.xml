<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_itemView"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgViewAppIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/switchLayout"
        android:layout_toRightOf="@+id/iconLayout"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text="name"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSecurityHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:text="name"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/switchLayout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/viewLockIndicator"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <!--<Switch-->
        <!--android:id="@+id/switchAppLock"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    </LinearLayout>
</RelativeLayout>